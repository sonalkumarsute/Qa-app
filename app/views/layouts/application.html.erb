<!DOCTYPE html>
<html>
  <head>
    <title>QaApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">    
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>" style="font-size:12px;color:red;"><%= value %></div>
    <% end %>    
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'QA app', questions_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <!-- <li><%#= link_to 'topics', topics_path, class:'active'%></li> -->
            <% end %>        
          </ul>
          <ul class="nav navbar-nav pull-right">
            <% if user_signed_in? %>
              <li class="dropdown">
<!--                 <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%#= current_user.name %>
                  <span class="caret"></span>
                </a> -->
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <%= link_to "<i class='fa fa-fw fa-power-off'></i> Log out".html_safe, destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure?'}%>
                  </li>
                </ul>
              </li>
            <% else %>
                <li><%= link_to 'Log In', new_user_session_path %></li>
                <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>      
    <%= yield %>
  </body>
</html>
